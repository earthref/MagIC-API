  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^10.12.26",
    "axios": "^0.18.0",
    "concurrently": "^4.1.0",
    "jest": "^24.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "wait-on": "^3.2.0"
  }
